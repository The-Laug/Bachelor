


method splittingSquareSum(n: Int) returns (res: Int,res2: Int,res3: Int)
    requires 0 <= n  
    ensures res3 == res + res2
{    
    res := 0
    var i: Int := 0
    res2 := 0
    var i2: Int := 0
    res3 := 0
    var i3: Int := 0
    while (i <= n)
        invariant 0 <= i
        invariant i <= n + 1
        invariant res == for p=0 to i-1 sum (p^2)
    {
        res := res + i*i
        i := i + 1
    }
    while (i2 <= n)
        invariant 0 <= i2
        invariant i2 <= n + 1
        invariant res2 == for p=0 to i2-1 sum (p^2)
    {
        res2 := res2 + i2*i2
        i2 := i2 + 1
    }
    while (i3 <= n)
        invariant 0 <= i3
        invariant i3 <= n + 1
        invariant res3 == for p=0 to i3-1 sum (p^2 + p^2)
    {
        res3 := res3 + i3*i3 + i3*i3
        i3 := i3 + 1
    }
    assert res + res2 == res3

}