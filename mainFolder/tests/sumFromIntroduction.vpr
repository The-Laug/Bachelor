method sum_zero_to_n(n: Int) returns (res: Int)
    requires 0 <= n
    ensures res == n * (n+1) / 2
{    
    res := 0
    var i: Int := 0
    while (i <= n)
        invariant 0 <= i
        invariant i <= n + 1
        invariant res == for p=0 to i-1 sum (p)
    {
        res := res + i
        i := i + 1
    }
}