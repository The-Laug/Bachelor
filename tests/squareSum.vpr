
method sumSquare(n: Int) returns (res: Int) 
    requires 0 <= n
    ensures res == for p=0 to n sum (p^2)
{
    res :=0
    var i:Int := 0
    while (i <= n)
        invariant 0 <= i 
        invariant i <= n+1
        invariant res == for p=0 to i-1 sum (p^2)
        {
            res := res + i*i
            i := i+1
        }
}
